# Yandex Cloud IAM токен — получить в разделе "Сервисные аккаунты" консоли Yandex Cloud
YANDEX_CLOUD_IAM_TOKEN=<замените_на_iam_token>

# Yandex Cloud Folder ID — взять в настройках каталога
YANDEX_CLOUD_FOLDER_ID=<замените_на_folder_id>

# Почтовый SMTP-хост — провайдер (например, Gmail SMTP). Узнать в панели почтового сервиса
SMTP_HOST=smtp.gmail.com

# Порт SMTP — взять в документации почтового провайдера
SMTP_PORT=587

# SMTP логин — учётная запись почтового ящика (панель провайдера)
SMTP_USERNAME=<замените_на_smtp_login>

# SMTP пароль/ключ приложения — сгенерировать в настройках безопасности почтового сервиса
SMTP_PASSWORD=<замените_на_smtp_password>

# Отправитель писем — адрес подтверждённого ящика
SMTP_FROM_EMAIL=<замените_на_email_отправителя>

# OpenAI API ключ — получить в личном кабинете OpenAI
OPENAI_API_KEY=<замените_на_openai_api_key>

# Таймзона пайплайна — используем московское время для ночных окон
APP_TIMEZONE=Europe/Moscow

# URL Redis — сервис очередей (используем контейнер redis)
REDIS_URL=redis://redis:6379/0

# Порт Redis — используется проброс порта из docker-compose
REDIS_PORT=6379

# Пользователь PostgreSQL — указывается в docker-compose и pg_hba
POSTGRES_USER=leadgen

# Пароль PostgreSQL — хранится в секретном менеджере или .env (локально)
POSTGRES_PASSWORD=leadgen_password

# Имя базы PostgreSQL — создаётся автоматически при запуске контейнера
POSTGRES_DB=leadgen

# Хост БД — для приложений внутри docker-compose достаточно db
POSTGRES_HOST=db

# Порт PostgreSQL — пробрасываем из docker-compose при необходимости
POSTGRES_PORT=5432
